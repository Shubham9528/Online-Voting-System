<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Voting System</title>
    <link rel="stylesheet" type="text/css" href="votingsystem.css">
</head>

<body>
    <div id="head" class="text-center">

        <h2 align="center">Welcome for Voting</h2>
        <h3 align="center">
            <p>Voting Dates: <span id="dates"></span></p>
        </h3>
        <br />
    </div>
    <form id="candidate" class="container" action="/voteCount" method="POST">
        
        <table class="table text-center">
            <thead>

                <tr>
                    <th>Name</th>
                    <th>Party</th>

                </tr>
                <% votingData.forEach(data=> { %>
                    <tr>

                        <td id="name"><input type="radio" name="candidate" value="<%= data.candidate_name %>"><label for="">
                                <%= data.candidate_name %>
                            </label></td>
                        <td id="party">
                            <%= data.party_name %>
                        </td>



                    </tr>
                    <% }) %>



            </thead>
            <tbody id="boxCandidate"></tbody>
        </table>
        <br />
        <div id="vote">
            <p>Please select one of the candidates and click the vote button.</p>

            <button id="voteButton" class="btn btn-primary" onclick="App.vote()">Vote</button>
            <div id="msg"></div>

            <div id="vote-box"></div>
        </div>
    </form>

    <div id="account">
        <p id="accountAddress" class="text-center"></p>
    </div>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.0/umd/popper.min.js"></script>
    <script src="../dist/app.bundle.js" type="module"></script>

</body>

</html>